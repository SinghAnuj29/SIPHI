        <TextView
            android:id="@+id/txtSampleRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/expected_sample_record"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            android:layout_marginStart="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/expected_sample" />

        <TextView
            android:id="@+id/txtSampleRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lip-Sync Animation"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginStart="10dp"/>


        <EditText
            android:id="@+id/gifEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter the word you want to proceed with"
            android:padding="6dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"/>

<!--        <ImageView-->
